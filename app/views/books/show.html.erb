<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render"layouts/user_info",user: @user %>
      <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, url:'/books', local:true do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <%= f.text_area :body %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book' %>
          </div>
        <% end %>
        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <td><%= attachment_image_tag @showbook.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %></td>
                <td><%= link_to @user.name %></td>
                <td><%= @showbook.title %></td>
                <td><%= @showbook.body %></td>
                <td>
                  <% if @showbook.user == current_user %>
                   <%= link_to "Edit", edit_book_path(@showbook) %></p>
                  <% end %>
                </td>
                <td>
                  <% if @showbook.user == current_user %>
                  <%= link_to "Destroy", book_path(@showbook), method: :delete %>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
    </div>
  </div>
</div>